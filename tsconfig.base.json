{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "composite": true,
    "target": "ES2020",
    "declaration": true,
    "stripInternal": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  }
}
